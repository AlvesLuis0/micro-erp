<%= simple_form_for(record) do |f| %>
  <div class="row">
    <div class="col-2">
      <%= f.input :id, disabled: true %>
    </div>

    <div class="col-6">
      <%= f.input :description, autofocus: true %>
    </div>

    <div class="col-2">
      <%= f.input :order %>
    </div>

    <div class="col-2">
      <%= f.input :status, collection: SaleMethod.statuses, include_blank: false %>
    </div>
  </div>

  <div>
    <%= f.button :submit %>
  </div>
<% end %>
