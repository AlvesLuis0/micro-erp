<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= sort_link(q, :id) %></th>
      <th><%= sort_link(q, :description) %></th>
      <th><%= sort_link(q, :order) %></th>
      <th><%= sort_link(q, :status) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% records.each do |record| %>
      <tr>
        <th><%= record.id %></th>
        <td><%= highlight(record.description, params.dig(:q, :description_cont)) %></td>
        <td><%= record.order %></td>
        <td><%= record.status %></td>
        <td>
          <%= link_to "Edit", edit_sale_method_path(record), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>