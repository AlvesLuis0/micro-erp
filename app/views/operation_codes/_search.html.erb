<%= search_form_for(q) do |form| %>
  <div class="row">
    <div class="col-7">
      <%= form.label :description %>
      <%= form.search_field :description_cont, class: "form-control" %>
    </div>

    <div class="col-2">
      <%= form.label :operation_type %>
      <%= form.select :operation_type_eq, enum_to_select(OperationCode.operation_types), { include_blank: true }, { class: "form-select" } %>
    </div>

    <div class="col-2">
      <%= form.label :status %>
      <%= form.select :status_eq, enum_to_select(OperationCode.statuses), { include_blank: true }, { class: "form-select" } %>
    </div>

    <div class="col-1 mt-auto">
      <%= form.submit class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>