<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= sort_link(q, :id) %></th>
      <th><%= sort_link(q, :description) %></th>
      <th><%= sort_link(q, :operation_type) %></th>
      <th><%= sort_link(q, :status) %></th>
    </tr>
  </thead>
  <tbody>
    <% records.each do |record| %>
      <tr>
        <th><%= record.id %></th>
        <td><%= highlight(record.description, params.dig(:q, :description_cont)) %></td>
        <td><%= t_enum(record.operation_type) %></td>
        <td><%= t_enum(record.status) %></td>
        <td>
          <%= link_to edit_operation_code_path(record), class: "btn btn-primary" do %>
            <i class="bi bi-pencil-square"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>