<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= sort_link(q, :id) %></th>
      <th><%= sort_link(q, :description) %></th>
      <th><%= sort_link(q, :operation_type) %></th>
      <th><%= sort_link(q, :status) %></th>
    </tr>
  </thead>
  <tbody>
    <% resources.each do |resource| %>
      <tr>
        <th><%= resource.id %></th>
        <td><%= highlight(resource.description, params.dig(:q, :description_cont)) %></td>
        <td><%= t_enum(resource.operation_type) %></td>
        <td><%= t_enum(resource.status) %></td>
        <td><%= t_link_to "helpers.submit.edit", edit_operation_code_path(resource), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>