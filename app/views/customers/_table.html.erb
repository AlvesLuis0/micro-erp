<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= sort_link(q, :id) %></th>
      <th><%= sort_link(q, :person_detail_name) %></th>
      <th><%= sort_link(q, :person_detail_person_type) %></th>
      <th><%= sort_link(q, :status) %></th>
    </tr>
  </thead>
  <tbody>
    <% resources.each do |resource| %>
      <tr>
        <th><%= resource.id %></th>
        <td><%= highlight(resource.person_detail.name, params.dig(:q, :person_detail_name_cont)) %></td>
        <td><%= t_enum(resource.person_detail.person_type) %></td>
        <td><%= t_enum(resource.status) %></td>
        <td><%= t_link_to "helpers.submit.edit", edit_customer_path(resource), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>