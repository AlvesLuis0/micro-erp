<%= search_form_for(q) do |form| %>
  <div class="row">
    <div class="col-6">
      <%= form.search_field :description_cont, class: "form-control" %>
    </div>

    <div class="col-3">
      <%= form.select :payment_type_eq, enum_to_select(PaymentMethod.payment_types), { include_blank: true }, { class: "form-select" } %>
    </div>

    <div class="col-2">
      <%= form.select :status_eq, enum_to_select(PaymentMethod.statuses), { include_blank: true }, { class: "form-select" } %>
    </div>

    <div class="col-1">
      <%= form.submit class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>