<%= simple_form_for(record) do |f| %>
  <div class="row">
    <div class="col-2">
      <%= f.input :id, disabled: true %>
    </div>

    <div class="col-8">
      <%= f.input :description, autofocus: true %>
    </div>

    <div class="col-2">
      <%= f.input :status, collection: enum_to_select(PaymentMethod.statuses), include_blank: false %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.input :payment_type, collection: enum_to_select(PaymentMethod.payment_types), include_blank: false %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
